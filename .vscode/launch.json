{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Main",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/waqd/__main__.py",
            "args": ["--debug=2"],
            "console": "integratedTerminal",
            "subProcess": true,
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "subProcess": true,
            "justMyCode": true
        },
        {
            "name": "Python Raspberry Pi: Attach",
            "type": "python",
            "request": "attach",
            "subProcess": true,
            //"preLaunchTask": "startapp",
            //"postDebugTask": "stopapp",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src/waqd", // ssh://myraspberry2You may also manually specify the directory containing your source code.
                    "remoteRoot": "/usr/local/waqd/1.6.0b3/lib/python3.7/site-packages/waqd" // Linux example; adjust as necessary for your OS and situation.
                }
            ],
            "port": 3003,
            "host": "IP",
            "justMyCode": false
        },
    ]
}